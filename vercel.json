{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ],
    "env": {
      "MONGODB_URI": "@mongodb_uri",
      "PORT": "5000",
      "EMAIL_USER": "@email_user",
      "EMAIL_PASS": "@email_pass"
    }
  }